html
    html
    head
        title zendeskTicketViewer
        style
            include styles/w3.css
            include styles/zendesk.css
    body 
      div.container
        h1 Mobile Ticket Viewer
        hr
        p #{count} total tickets, #{pageCount} on this page       
        table
            tr 
                th id
                th subject
            each ticket in tickets
                tr
                    td
                        a(href=`/tickets/${ticket.id}?page=${page}`)= ticket.id
                    td
                        a(href=`/tickets/${ticket.id}?page=${page}`)= ticket.subject
        div.w3-bar 
            - var n = 1;
            if page!=1
                a(href=`/tickets/?page=${page-1}`).w3-button <<
            while n <= pages
                if n == page
                    a(href=`/tickets/?page=${n++}`).w3-button.w3-blue= n-1
                else
                    a(href=`/tickets/?page=${n++}`).w3-button= n-1
            if page!=pages    
                a(href=`/tickets/?page=${Number(page)+1}`).w3-button >>